= form_for @user do |f|
  %ul
    - @user.errors.each do |error|
      %li= error
  %p
    Full Name:      #{f.text_field :full_name, :id => 'full_name'}
  %p
    Display Name:   #{f.text_area :display_name, :id => 'display_name'}
  %p
    Email:          #{f.email_field :email, :id => 'email'}
  %p
    Password:       #{f.password_field :password, :id => 'password'}
  %p
    Password Confirmation:    #{f.password_field :password_confirmation, :id => 'password_confirmation'}
  = f.submit "Save Your Account", :id => 'save'
